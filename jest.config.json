{
  "verbose": true,
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "testURL": "http://localhost/",
  "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "globals": {
    "window": {},
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "setupFiles": ["./jest.stubs.js"],
  "moduleNameMapper": {
    "~(.*)$": "<rootDir>/src/app/$1"
  }
}
