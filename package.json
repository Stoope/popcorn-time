{
  "name": "popcorn-time",
  "version": "1.0.0",
  "repository": "git@github.com:Stoope/popcorn-time.git",
  "author": "Stepan Kurennykh <stoope@outlook.com>",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "parcel:dev": "rm -rf build/* && parcel ./src/app/index.html -d build/",
    "electron:dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
    "start": "concurrently \"yarn parcel:dev\" \"yarn electron:dev\" \"yarn test:watch\"",
    "precommit": "lint-staged",
    "build": "rm -rf build/* && parcel build ./src/app/index.html -d build/ --public-url ./ && electron-builder",
    "test": "jest --config jest.config.json",
    "test:watch": "yarn jest --config jest.config.json --watch",
    "extractMessages": "node ./extractMessages.js"
  },
  "build": {
    "appId": "popcorn.time",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "files": [
      "./src/index.js",
      "build/*"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "classnames": "^2.2.6",
    "deepmerge": "^2.1.1",
    "lodash": "^4.17.10",
    "memoizee": "^0.4.12",
    "query-string": "^6.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-infinite-scroller": "^1.2.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0",
    "redux-persist-transform-filter": "^0.0.18",
    "redux-saga": "^0.16.0",
    "typeface-roboto": "^0.0.54",
    "typesafe-actions": "^2.0.4"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/deep-extend": "^0.4.31",
    "@types/deepmerge": "^2.1.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-packager": "^12.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/fsevents": "^1.1.0",
    "@types/history": "^4.7.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/memoizee": "^0.4.2",
    "@types/prettier": "^1.13.2",
    "@types/query-string": "^6.1.0",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-infinite-scroller": "^1.0.7",
    "@types/react-intl": "^2.3.8",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "babel-jest": "^23.4.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.6.1",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.1.0",
    "electron-rebuild": "^1.8.2",
    "electron-reload": "^1.2.5",
    "extract-react-intl": "^0.6.0",
    "fs-extra": "^7.0.0",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.0",
    "ts-jest": "^23.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "optionalDependencies": {
    "fsevents": "^1.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tslint --max-warnings=0",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "alias": {
    "~": "./src/app"
  }
}
