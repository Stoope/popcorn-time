{
  "name": "popcorn-time",
  "version": "1.0.0",
  "repository": "git@github.com:Stoope/popcorn-time.git",
  "author": "Stepan Kurennykh <stoope@outlook.com>",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "parcel:dev": "rm -rf build/* && parcel ./src/app/index.html -d build/",
    "electron:dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
    "start": "concurrently \"yarn parcel:dev\" \"yarn electron:dev\"",
    "precommit": "lint-staged",
    "build": "rm -rf build/* && parcel build ./src/app/index.html -d build/ --public-url ./ && electron-builder"
  },
  "build": {
    "appId": "popcorn.time",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "files": [
      "./src/index.js",
      "build/*"
    ]
  },
  "dependencies": {
    "@material-ui/core": "1.4.2",
    "react": "16.4.1",
    "react-dom": "16.4.1"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "concurrently": "3.6.1",
    "electron": "2.0.5",
    "electron-builder": "20.26.0",
    "electron-packager": "12.1.0",
    "electron-rebuild": "1.8.1",
    "electron-reload": "1.2.5",
    "eslint": "5.2.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-react": "7.10.0",
    "lint-staged": "7.2.0",
    "parcel-bundler": "1.9.7",
    "prettier": "1.14.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --max-warnings=0",
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
