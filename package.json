{
  "name": "popcorn-time",
  "version": "1.0.0",
  "repository": "git@github.com:Stoope/popcorn-time.git",
  "author": "Stepan Kurennykh <stoope@outlook.com>",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "parcel:dev": "rm -rf build/* && parcel ./src/app/index.html -d build/",
    "electron:dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
    "start": "concurrently \"yarn parcel:dev\" \"yarn electron:dev\" \"yarn test:watch\"",
    "precommit": "lint-staged",
    "build": "rm -rf build/* && parcel build ./src/app/index.html -d build/ --public-url ./ && electron-builder",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "build": {
    "appId": "popcorn.time",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "files": [
      "./src/index.js",
      "build/*"
    ]
  },
  "dependencies": {
    "@material-ui/core": "1.4.2",
    "@material-ui/icons": "2.0.0",
    "babel-polyfill": "6.26.0",
    "deepmerge": "2.1.1",
    "lodash": "4.17.10",
    "memoizee": "0.4.12",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-redux": "5.0.7",
    "redux": "4.0.0",
    "redux-saga": "0.16.0",
    "typeface-roboto": "0.0.54",
    "typesafe-actions": "2.0.4"
  },
  "devDependencies": {
    "@types/deep-extend": "0.4.31",
    "@types/deepmerge": "2.1.0",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/electron-packager": "12.0.0",
    "@types/fsevents": "1.1.0",
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.115",
    "@types/memoizee": "0.4.2",
    "@types/prettier": "1.13.2",
    "@types/react": "16.4.7",
    "@types/react-dom": "16.0.6",
    "@types/react-redux": "6.0.5",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.2",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "concurrently": "3.6.1",
    "electron": "2.0.5",
    "electron-builder": "20.26.0",
    "electron-devtools-installer": "2.2.4",
    "electron-packager": "12.1.0",
    "electron-rebuild": "1.8.1",
    "electron-reload": "1.2.5",
    "eslint": "5.2.0",
    "eslint-plugin-react": "7.10.0",
    "jest": "23.4.2",
    "lint-staged": "7.2.0",
    "parcel-bundler": "1.9.7",
    "prettier": "1.14.0",
    "ts-jest": "23.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-react": "3.6.0",
    "typescript": "3.0.1"
  },
  "optionalDependencies": {
    "fsevents": "1.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --max-warnings=0",
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tslint --max-warnings=0",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "alias": {
    "~": "./src/app",
    "~types": "./src/app/HOCs/ReduxWithMidleware/reducers/index"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
