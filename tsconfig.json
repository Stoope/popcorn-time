{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/app/*"],
      "types": ["./src/app/HOCs/ReduxWithMidleware/reducers/index"],
      "messages": ["./src/app/HOCs/ReactIntl/translations/messages"]
    },
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
